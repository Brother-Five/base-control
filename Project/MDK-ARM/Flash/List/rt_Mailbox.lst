N/*--------------------------- rt_mbx_wait -----------------------------------*/
N
NOS_RESULT rt_mbx_wait (OS_ID mailbox, void **message, U16 timeout) {
N  /* Receive a message; possibly wait for it */
N  P_MCB p_MCB = mailbox;
N  P_TCB p_TCB;
N
N  /* If a message is available in the fifo buffer */
N  /* remove it from the fifo buffer and return. */
N  if (p_MCB->count) {
N    *message = p_MCB->msg[p_MCB->last];
N    if (++p_MCB->last == p_MCB->size) {
N      p_MCB->last = 0;
N    }
N    if (p_MCB->p_lnk != NULL) {
X    if (p_MCB->p_lnk != ((void *) 0)) {
N      /* A task is waiting to send message */
N      p_TCB = rt_get_first ((P_XCB)p_MCB);
N      p_TCB->ret_val = OS_R_OK;
X      p_TCB->ret_val = 0x00;
N      p_MCB->msg[p_MCB->first] = p_TCB->msg;
N      if (++p_MCB->first == p_MCB->size) {
N        p_MCB->first = 0;
N      }
N      rt_rmv_dly (p_TCB);
N      rt_dispatch (p_TCB);
N      os_tsk.run->ret_val = OS_R_OK;
X      os_tsk.run->ret_val = 0x00;
N    }
N    else {
N      rt_dec (&p_MCB->count);
X      while(__strex((__ldrex(&p_MCB->count)-1),&p_MCB->count));
N    }
N    return (OS_R_OK);
X    return (0x00);
N  }
N  /* No message available: wait for one */
N  if (timeout == 0) {
N    return (OS_R_TMO);
X    return (0x01);
N  }
N  if (p_MCB->p_lnk != NULL) {
X  if (p_MCB->p_lnk != ((void *) 0)) {
N    rt_put_prio ((P_XCB)p_MCB, os_tsk.run);
N  }
N  else {
N    p_MCB->p_lnk = os_tsk.run;
N    os_tsk.run->p_lnk = NULL;
X    os_tsk.run->p_lnk = ((void *) 0);
N    os_tsk.run->p_rlnk = (P_TCB)p_MCB;
N  }
N  rt_block(timeout, WAIT_MBX);
X  rt_block(timeout, 8);
N  os_tsk.run->msg = message;
N  return (OS_R_TMO);
X  return (0x01);
N}
