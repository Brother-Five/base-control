N/*--------------------------- isr_mbx_send ----------------------------------*/
N
Nvoid isr_mbx_send (OS_ID mailbox, void *p_msg) {
N  /* Same function as "os_mbx_send", but to be called by ISRs. */
N  P_MCB p_MCB = mailbox;
N
N  rt_psq_enq (p_MCB, (U32)p_msg);
N  rt_psh_req ();
N}
