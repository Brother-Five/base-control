N/*--------------------------- rt_mbx_psh ------------------------------------*/
N
Nvoid rt_mbx_psh (P_MCB p_CB, void *p_msg) {
N  /* Store the message to the mailbox queue or pass it to task directly. */
N  P_TCB p_TCB;
N
N  /* Check if this was an 'isr_mbx_receive ()' post service request.   */
N  if (p_CB->p_lnk != NULL && p_CB->isr_st == 2) {
X  if (p_CB->p_lnk != ((void *) 0) && p_CB->isr_st == 2) {
N    /* A task is waiting to send message, remove it from the waiting list. */
N    p_CB->isr_st = 0;
N    p_TCB = rt_get_first ((P_XCB)p_CB);
N    p_TCB->ret_val = OS_R_OK;
X    p_TCB->ret_val = 0x00;
N    /* Store the message to the mailbox queue. */
N    p_CB->msg[p_CB->first] = p_TCB->msg;
N    rt_inc (&p_CB->count);
X    while(__strex((__ldrex(&p_CB->count)+1),&p_CB->count));
N    if (++p_CB->first == p_CB->size) {
N      p_CB->first = 0;
N    }
N    goto rdy;
N  }
N  /* A task is waiting for message, pass the message to task directly. */
N  if (p_CB->p_lnk != NULL && p_CB->count == 0) {
X  if (p_CB->p_lnk != ((void *) 0) && p_CB->count == 0) {
N    p_TCB = rt_get_first ((P_XCB)p_CB);
N    *p_TCB->msg = p_msg;
N    p_TCB->ret_val = OS_R_MBX;
X    p_TCB->ret_val = 0x04;
Nrdy:p_TCB->state = READY;
Xrdy:p_TCB->state = 1;
N    rt_rmv_dly (p_TCB);
N    rt_put_prio (&os_rdy, p_TCB);
N  }
N  else {
N    /* No task is waiting for message, store the message to the mailbox queue.*/
N    if (p_CB->count < p_CB->size) {
N      p_CB->msg[p_CB->first] = p_msg;
N      rt_inc (&p_CB->count);
X      while(__strex((__ldrex(&p_CB->count)+1),&p_CB->count));
N      if (++p_CB->first == p_CB->size) {
N        p_CB->first = 0;
N      }
N    }
N    else {
N      os_error (OS_ERR_MBX_OVF);
X      os_error (3);
N    }
N  }
N}
