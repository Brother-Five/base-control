NOS_RESULT rt_mbx_send (OS_ID mailbox, void *p_msg, U16 timeout) {
N  /* Send message to a mailbox */
N  P_MCB p_MCB = mailbox;
N  P_TCB p_TCB;
N
N  if (p_MCB->p_lnk != NULL && p_MCB->count == 0) {
X  if (p_MCB->p_lnk != ((void *) 0) && p_MCB->count == 0) {
N    /* A task is waiting for message */
N    p_TCB = rt_get_first ((P_XCB)p_MCB);
N    *p_TCB->msg    = p_msg;
N    p_TCB->ret_val = OS_R_MBX;
X    p_TCB->ret_val = 0x04;
N    rt_rmv_dly (p_TCB);
N    rt_dispatch (p_TCB);
N    os_tsk.run->ret_val = OS_R_OK;
X    os_tsk.run->ret_val = 0x00;
N  }
N  else {
N    /* Store message in mailbox queue */
N    if (p_MCB->count == p_MCB->size) {
N      /* No free message entry, wait for one. If message queue is full, */
N      /* then no task is waiting for message. The 'p_MCB->p_lnk' list   */
N      /* pointer can now be reused for send message waits task list.    */
N      if (timeout == 0) {
N        return (OS_R_TMO);
X        return (0x01);
N      }
N      if (p_MCB->p_lnk != NULL) {
X      if (p_MCB->p_lnk != ((void *) 0)) {
N        rt_put_prio ((P_XCB)p_MCB, os_tsk.run);
N      }
N      else {
N        p_MCB->p_lnk = os_tsk.run;
N        os_tsk.run->p_lnk  = NULL;
X        os_tsk.run->p_lnk  = ((void *) 0);
N        os_tsk.run->p_rlnk = (P_TCB)p_MCB;
N        /* Signal the 'isr_mbx_receive ()' that the task is waiting */
N        /* to send a message */
N        p_MCB->isr_st = 1;
N      }
N      os_tsk.run->msg = p_msg;
N      rt_block (timeout, WAIT_MBX);
X      rt_block (timeout, 8);
N      return (OS_R_TMO);
X      return (0x01);
N    }
N    /* Yes, there is a free entry in a mailbox. */
N    p_MCB->msg[p_MCB->first] = p_msg;
N    rt_inc (&p_MCB->count);
X    while(__strex((__ldrex(&p_MCB->count)+1),&p_MCB->count));
N    if (++p_MCB->first == p_MCB->size) {
N      p_MCB->first = 0;
N    }
N  }
N  return (OS_R_OK);
X  return (0x00);
N}
