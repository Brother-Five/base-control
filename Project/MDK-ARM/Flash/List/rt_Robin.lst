N/*----------------------------------------------------------------------------
N *      Global Variables
N *---------------------------------------------------------------------------*/
N
Nstruct OS_ROBIN os_robin;
N
N
N/*----------------------------------------------------------------------------
N *      Global Functions
N *---------------------------------------------------------------------------*/
N
N/*--------------------------- rt_init_robin ---------------------------------*/
N
N__weak void rt_init_robin (void) {
N  /* Initialize Round Robin variables. */
N  os_robin.task = NULL;
X  os_robin.task = ((void *) 0);
N  os_robin.tout = (U16)os_rrobin;
N}
N
N/*--------------------------- rt_chk_robin ----------------------------------*/
N
N__weak void rt_chk_robin (void) {
N  /* Check if Round Robin timeout expired and switch to the next ready task.*/
N  P_TCB p_new;
N
N  if (os_robin.task != os_rdy.p_lnk) {
N    /* New task was suspended, reset Round Robin timeout. */
N    os_robin.task = os_rdy.p_lnk;
N    os_robin.time = (U16)os_time + os_robin.tout - 1;
N  }
N  if (os_robin.time == (U16)os_time) {
N    /* Round Robin timeout has expired, swap Robin tasks. */
N    os_robin.task = NULL;
X    os_robin.task = ((void *) 0);
N    p_new = rt_get_first (&os_rdy);
N    rt_put_prio ((P_XCB)&os_rdy, p_new);
N  }
N}
